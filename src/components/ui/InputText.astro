---
import ReactInputText from "./react/InputText.tsx";

type Props = {
  value?: string;
  onChange?: (event: React.ChangeEvent<HTMLInputElement>) => void;
  onBlur?: (event: React.FocusEvent<HTMLInputElement>) => void;
  error?: boolean;
  helperText?: string;
  name: string;
  label: string;
  id: string;
  fullWidth?: boolean;
  type?: React.HTMLInputTypeAttribute;
};

const {
  value,
  onChange,
  onBlur,
  error,
  helperText,
  name,
  label,
  id,
  fullWidth,
  type,
} = Astro.props;
---

<ReactInputText
  fullWidth={fullWidth}
  id={id}
  name={name}
  label={label}
  value={value}
  type={type}
  onChange={onChange}
  onBlur={onBlur}
  error={error}
  helperText={helperText}
  client:only="preact"
/>
